<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.pzhu.system.view.SelectResultActivity">
    <RelativeLayout
        android:background="#289fdd"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/select_result_top_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查询结果"
            android:textColor="#fff"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="名称:"
                                android:textColor="#000"
                                />
                            <TextView
                                android:id="@+id/tv_select_result_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="国胜茶"
                                android:layout_marginLeft="5dp"
                                android:textColor="#000"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="产地:"
                                android:textColor="#000"
                                />
                            <TextView
                                android:id="@+id/tv_select_result_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="攀枝花"
                                android:layout_marginLeft="5dp"
                                android:textColor="#000"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="生产日期:"
                                android:textColor="#000"
                                />
                            <TextView
                                android:id="@+id/tv_select_result_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2017.04.25"
                                android:layout_marginLeft="5dp"
                                android:textColor="#000"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="建议零售价:"
                                android:textColor="#000"
                                />
                            <TextView
                                android:id="@+id/tv_select_result_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="98元"
                                android:layout_marginLeft="5dp"
                                android:textColor="#000"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="茶园位置:"
                                android:textColor="#000"
                                />
                            <TextView
                                android:id="@+id/tv_select_result_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="攀枝花市盐边县国胜乡"
                                android:layout_marginLeft="5dp"
                                android:textColor="#000"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="茶园名称:"
                                android:textColor="#000"
                                />
                            <TextView
                                android:id="@+id/tv_select_result_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="国胜茶园"
                                android:layout_marginLeft="5dp"
                                android:textColor="#000"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_select_result_pic"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/login_bg"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_select_result_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/tv_select_result_look_location"
            android:background="#289fdd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="查看茶园位置信息"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>
