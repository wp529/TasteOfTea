<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/tv_info_time"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016年2月20日" />

    <ImageView
        android:id="@+id/iv_info_status"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/other"
        />

    <TextView
        android:id="@+id/tv_info_handle"
        android:layout_toRightOf="@id/iv_info_status"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修剪" />
    <ImageView
        android:id="@+id/tv_info_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/info_prune"
        />
</RelativeLayout>